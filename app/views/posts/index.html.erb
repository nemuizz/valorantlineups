<div class="container">
  <div class="mt-4">
    <%= search_form_for @q, url: search_posts_path do |f| %>
            
      <%= f.collection_select(:agent_id_eq, @agents, :id, :agent_name) %>
      
      
      <%= f.collection_select(:map_id_eq, @maps, :id, :map_name) %>
      

    <%= f.search_field :content_or_title_cont %>		

      
      <%= f.submit "search" %>
    <% end %>
  </div>
  <h1>Posts</h1>

  <div id="posts" class="mt-2">
    <% @posts.each do |post| %>
      
        <div class="post">
          <%= render post %>
        </div>
      
    <% end %>
  </div>
  <%= paginate @posts, theme: 'bootstrap-5' %>
  <%= link_to "New post", new_post_path %>
</div>