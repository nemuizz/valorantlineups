<turbo-frame id="favorite_post_<%= post.id %>">
		<% if post.favorites.find_by(user_id: current_user.id) %>
			<%= button_to post_favorite_path(post.id), method: :delete, remote: true do %>
			<i class="fa-solid fa-bookmark fa-lg" style="color: #ff4655;"></i>
			<% end %>
			
		<% else %>
			<%= button_to post_favorite_path(post.id), method: :post, remote: true do %>
				<i class="fa-regular fa-bookmark fa-lg"></i>
			<% end %>
			
		<% end %>
		<%= post.favorites_count %>
</turbo-frame>