<div class="container">
  <div class="text-center mt-3 mb-2">
    <h2><%= @user.name %></h2>
    <p>投稿数： <%= @posts.count %></p>
    <% if user_signed_in? && @user.id == current_user.id %>
      <%= link_to "ユーザーを編集", edit_user_registration_path  %>
    <% end %>
  </div>
  <ul class="nav nav-tabs">
    <li class="nav-item"><%= link_to "投稿", user_path(@user), class: "nav-link active" %></li>
    <li class="nav-item"><%= link_to "ブックマーク", "/users/#{@user.id}/favorites", class: "nav-link" %></li>
  </ul>
  <% @posts.each do |post| %>
    <div class="post">
      <%= render "posts/post", post: post %>
    </div>
  <% end %>
</div>